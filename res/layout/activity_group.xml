<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GroupActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/Group_HeadView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/activity_button_sector" />
        
        <View  
                android:layout_width="2px"  
                android:layout_height="fill_parent" 
                android:background="?android:attr/listDivider"  />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:text="名称:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:text="人数:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:text="等级:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>
        
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Group_NameView"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:text="Wow"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />

            <TextView
                android:id="@+id/Group_NumView"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:text="15"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />

            <TextView
                android:id="@+id/Group_LevelView"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

        </LinearLayout>
    </LinearLayout>

    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exp:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ProgressBar
            android:id="@+id/Group_ExpProgressView"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="目标:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />
    <TextView
        android:id="@+id/Group_AboutView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="bottom|right"
        android:text="呵呵"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />
    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/Grout_CheckIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkIn"
            android:visibility="gone"
            android:text="入住" />

        <Button
            android:id="@+id/Group_SignDaily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="signDaily"
            android:visibility="gone"
            android:text="签到" />

        <Button
            android:id="@+id/Group_CheckOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkOut"
            android:visibility="gone"
            android:text="退出" />
    </LinearLayout>

</LinearLayout>