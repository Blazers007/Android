<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lessonwallpaper3"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MessageActivity" >

    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10" >

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="fill_parent"
            android:background="@drawable/nothing_button_sector"
            android:onClick="updateMsg"
            android:scaleType="center"
            android:src="@drawable/blue_velvet_062" />

        <TextView
            android:id="@+id/Info_Sex"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="邮件列表"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageButton
            android:id="@+id/textView1"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="@drawable/nothing_button_sector"
            android:onClick="clearMsg"
            android:scaleType="center"
            android:src="@drawable/blue_velvet_079" />

    </LinearLayout>
<View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />
    <ListView
        android:id="@+id/Message_ListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:divider="#000000"
        android:dividerHeight="1px"
        android:paddingTop="5dp" >
    </ListView>

    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />
</LinearLayout>
