<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lessonwallpaper3"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfileActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/Info_HeadPhoto"
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:scaleType="fitStart"
            android:src="@drawable/bosschen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/Message_From"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/Info_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/FriendListLayout_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Lv:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/Info_Level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lv"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 性别:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/Info_Sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="male"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

            </LinearLayout>

            <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />
            
            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/Group_NameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="称号:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/Info_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

            </LinearLayout>
            <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />
            

            <ProgressBar
                android:id="@+id/Info_ExpBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" />

            <TextView
                android:id="@+id/Info_Exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="100/150"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </LinearLayout>
    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="住址:  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/Info_Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂无"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

    </LinearLayout>
    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />

    <TextView
        android:id="@+id/FriendListLayout_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="个人签名:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />
    <TextView
        android:id="@+id/Info_Sign"
        android:layout_width="fill_parent"
        android:layout_height="59dp"
        android:gravity="bottom|right"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />
    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/FriendDetail_Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身高:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/Info_Height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="height"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="体重:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/Info_Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

    </LinearLayout>
    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="肤色:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <RatingBar
            android:id="@+id/Info_skinRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:isIndicator="true" />

    </LinearLayout>

    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="外表:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RatingBar
            android:id="@+id/Info_faceRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:isIndicator="true" />

    </LinearLayout>
    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <ImageButton
            android:id="@+id/Profile_UploadImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="85dp"
            android:onClick="haveAFight"
            android:src="@drawable/user_ok" />

        <ImageButton
            android:id="@+id/Profile_ShowList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="friendlist"
            android:src="@drawable/user_friend" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/Profile_Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="85dp"
            android:onClick="addfriend"
            android:src="@drawable/user_add" />

        <ImageButton
            android:id="@+id/Profile_Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sendmessage"
            android:src="@drawable/user_chat" />

    </LinearLayout>

</LinearLayout>