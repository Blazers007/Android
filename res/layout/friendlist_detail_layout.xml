<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/FriendDetail_Head"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:background="@drawable/nothing1"
            android:scaleType="centerInside"
            android:src="@drawable/bosschen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/MatchListDetail_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Title:   "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/FriendDetail_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="资深程序员"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />
            <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />

            <TextView
                android:id="@+id/Message_Msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Level:   "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/FriendDetail_Level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="15级别"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />
            
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/MessageDetail_Msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />
    <TextView
        android:id="@+id/FriendDetail_Sign"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:padding="3dp"
        android:text="无敌也是一种寂寞哈哈哈哈"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />
    <View  
                android:layout_width="fill_parent"  
                android:layout_height="2px" 
                android:background="?android:attr/listDivider"  />

</LinearLayout>