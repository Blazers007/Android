<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <RadioGroup
            android:id="@+id/Quest3_TypeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/Quest3_BookButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="书籍"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/Quest3_DailyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="日用" />
            
            <RadioButton
                android:id="@+id/Quest3_GameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="游戏" />
            
            <RadioButton
                android:id="@+id/Quest3_TicketButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="各种票" />
        </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="关键字:  "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/Quest3_KeyWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入关键字"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <CheckBox
            android:id="@+id/Quest3_ShowAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示所有"
            android:textColor="#000000" />

    </LinearLayout>
        
</LinearLayout>
